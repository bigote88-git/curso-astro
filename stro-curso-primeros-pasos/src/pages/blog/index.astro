---
import Layout from '../../components/layout.astro';

const posts = await Astro.glob('./posts/*.md');
---

<Layout titlePage="Inicio">
	
	<h1>Astro</h1>

    {
        posts.map(post => (
            <p>
                <a href={post.url} >{post.frontmatter.title}</a>
            </p>
        ))
    }
    
</Layout>
---
interface Props{
    title?: string
    content?: string
}
const { title = 'Default title', content = 'Default content' } = Astro.props;
---

<div>
    <h2>{ title }</h2>
    <p>{ content }</p>    
</div>

<style>
    div{
        background-color: aliceblue ;
        color: #ccc;
        border-radius: 5px;
        box-shadow: 1px 1px 15px rgb(83, 140, 239);
        padding: 5px;
        margin-top: 10px;
        width: 250px;
    }
</style>